#!/usr/bin/env node

'use strict';

var fs = require('fs');
var shortName = process.argv[2] || '.';
var property = process.argv[3] || 'version';
if (shortName != '.') shortName = 'node_modules/' + shortName;
var json = JSON.parse(fs.readFileSync(shortName + '/package.json', 'utf8'));
console.log(json[property]);
