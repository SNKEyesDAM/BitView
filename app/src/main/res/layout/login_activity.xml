<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/flat"
    tools:context=".Controller.LoginController">



    <LinearLayout

        android:layout_width="225dp"
        android:layout_height="375dp"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/gradienteenano" />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-25dp"
            android:background="@drawable/enanocoin">

        </FrameLayout>

        <TextView
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="left"
            android:text="UserName"
            android:fontFamily="@font/nexabook"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:gravity="left"
            android:id="@+id/loginUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserName" />

        <TextView
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="left"
            android:text="PassWord"
            android:fontFamily="@font/nexabook"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:gravity="left"
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PassWord"
            android:inputType="textPassword" />

        <Button
            android:gravity="center"
            android:id="@+id/btnLogin"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/botonentrar"
            android:text="" />

        <Button
            android:id="@+id/btnLogon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="registrar"
            android:layout_gravity="center"
            android:background="@null"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>