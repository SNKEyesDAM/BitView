<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/flat"
    tools:context=".Controller.LogonController">



    <LinearLayout

        android:layout_width="225dp"
        android:layout_height="400dp"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradienteenano" />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-25dp"
            android:background="@drawable/enanocoin">

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:text="UserName: "
                android:fontFamily="@font/nexabook"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:layout_gravity="end"
                android:id="@+id/logonUsername"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="UserName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:text="PassWord: "
                android:fontFamily="@font/nexabook"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:layout_gravity="end"
                android:id="@+id/logonPassword"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="PassWord"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:text="Nombre: "
                android:fontFamily="@font/nexabook"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/logonName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Nombre" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:text="Apellidos: "
                android:fontFamily="@font/nexabook"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:layout_gravity="end"
                android:id="@+id/logonApellido"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Apellidos" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="left"
                android:text="Email: "
                android:fontFamily="@font/nexabook"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/logonEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo Electronico" />

        </LinearLayout>



        <Button
            android:gravity="center"
            android:id="@+id/btnCreateUser"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/botonentrar"
            android:text="" />

    </LinearLayout>

</LinearLayout>